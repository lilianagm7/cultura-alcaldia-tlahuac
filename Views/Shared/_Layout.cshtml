<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[""] Alcaldia de Tláhuac</title> <!--Nombre de la pestaña-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CulturalesAlcaldia.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- Menu principal -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow px-4">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/imagenes/Logo_Alcaldia.jpg" style="width:50px;" class="me-2" />
                    Gobierno de la alcaldía Tláhuac
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--Menú -->
                <div class="collapse navbar-collapse justify-content-center" id="menuPrincipal">

                    <ul class="navbar-nav">

                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Calendario</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Registro</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Eventos</a>
                        </li>
                    </ul>

                </div>

                <!Botón acceso -->
                <div class="d-flex">
                    <a class="btn btn-outline-warning rounded-pill px-4" href="#">
                        Acceso
                    </a>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CulturalesAlcaldia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
